<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:strokeColor="#E0E0E0"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/item_medication_result_MedIcon_image_view_id"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_launcher_foreground"
            app:tint="#66BB6A"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/item_medication_task_MedName_text_view_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Paracetamol"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#424242"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@id/item_medication_result_MedIcon_image_view_id"
            app:layout_constraintEnd_toStartOf="@id/item_medication_result_Add_image_view_id"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/item_medication_result_MedDosage_text_view_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="500mg - Comprimidos"
            android:textSize="14sp"
            android:textColor="#757575"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@id/item_medication_result_MedIcon_image_view_id"
            app:layout_constraintEnd_toStartOf="@id/item_medication_result_Add_image_view_id"
            app:layout_constraintTop_toBottomOf="@id/item_medication_task_MedName_text_view_id"/>

        <ImageView
            android:id="@+id/item_medication_result_Add_image_view_id"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_input_add"
            app:tint="#66BB6A"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>