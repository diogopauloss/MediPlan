<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp">

    <TextView
        android:id="@+id/activity_search_medication_TitleSearch_text_view_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nova Medicação"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#66BB6A"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/activity_search_medication_Search_text_field_id"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Pesquisar nome (ex: Ben-u-ron)"
        app:startIconDrawable="@android:drawable/ic_menu_search"
        app:boxStrokeColor="#66BB6A"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/activity_search_medication_TitleSearch_text_view_id">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"/>
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/activity_search_medication_Medications_recycler_view_id"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/activity_search_medication_Search_text_field_id"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>